<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjpowernode.crm.workbench.dao.ClueDao">
	
	<insert id="saveClue">
        insert into tbl_clue (id,fullname,appellation,owner,company,job,email,phone,website,mphone,state,source,createBy,createTime, description,contactSummary,nextContactTime,address)
        values (#{id},#{fullname},#{appellation},#{owner},#{company},#{job},#{email},#{phone},#{website},#{mphone},#{state},#{source},#{createBy},#{createTime},#{description},#{contactSummary},#{nextContactTime},#{address})
    </insert>

    <select id="selectById" resultType="Clue">
        select
            c.id,
            c.fullname,
            c.appellation,
            u.name as owner,
            c.company,
            c.job,
            c.email,
            c.phone,
            c.website,
            c.mphone,
            c.state,
            c.source,
            c.createBy,
            c.createTime,
            c.editBy,
            c.editTime,
            c.description,
            c.contactSummary,
            c.nextContactTime,
            c.address
        from tbl_clue c
        join tbl_user u
        on c.owner=u.id
        where c.id = #{id}
    </select>

    <select id="SelectClueAndActivityRelation" resultType="Activity">
        select
            car.id,a.name,a.startDate,a.endDate,u.name as owner
        from
            tbl_activity a
                join
            tbl_user u
            on
                a.owner = u.id
                join
            tbl_clue_activity_relation car
            on  a.id = car.activityId
        where
            car.clueId = #{id}

    </select>
    <delete id="removeRelation">
        delete from tbl_clue_activity_relation where id=#{carId}
    </delete>

    <delete id="deleteById">
        delete from tbl_clue where id=#{cId}
    </delete>


</mapper>

































